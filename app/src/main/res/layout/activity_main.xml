<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.segundoauqui.datapersistence.MainActivity">


    <EditText

        android:id="@+id/etVal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText

        android:id="@+id/etVal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:text="saveData"
        android:onClick="saveData"
        android:id="@+id/btnSaveDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button

        android:text="getData"
        android:onClick="getData"
        android:id="@+id/btnGetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button

        android:text="Next Page"
        android:onClick="goToNext"
        android:id="@+id/btnGoToNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView

        android:id="@+id/tvViewData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView

        android:id="@+id/tvViewData2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>
